<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E10605.Views.PageMap"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             BackgroundColor="PaleVioletRed">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Text="Atras" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <maps:Map x:Name="Mapa"/>
            <Button x:Name="Btncompartir" Text="Compartir Imagen Ubicacion" Clicked="Btncompartir_Clicked" BackgroundColor="Green"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>